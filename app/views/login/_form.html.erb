<%= form_with(url: login_path, method: :post) do |form| %>
    <div class="mb-4">
      <%= form.label :email %>
      <%= form.email_field :email, class: "block rounded-lg border-gray-300" %>
    </div>

    <div class="mb-4">
      <%= form.label :password %>
      <%= form.password_field :password, class: "block rounded-lg border-gray-300" %>
    </div>

    <div class="mb-4">
      <%= form.check_box :remember_me %>
      <%= form.label :remember_me, "Beni Hatırla" %>
    </div>

    <%= form.submit "Giriş Yap", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
  <% end %>
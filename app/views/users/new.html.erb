<div class="container mx-auto">
  <h2 class="text-2xl font-semibold mb-4">REGISTER</h2> <br>

  <%= form_with(model: @user, url: register_path, class: "mb-8") do |form| %>
    <div class="mb-4">
      <%= form.label :name %>
      <%= form.text_field :name, class: "block rounded-lg border-gray-300" %>
    </div>

    <div class="mb-4">
      <%= form.label :email %>
      <%= form.email_field :email, class: "block rounded-lg border-gray-300" %>
    </div>

    <div class="mb-4">
      <%= form.label :password %>
      <%= form.password_field :password, class: "block rounded-lg border-gray-300" %>
    </div>

    <%= form.submit "Register", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" ,   data: { turbo_confirm: "Register is successfully." } %>
  <% end %>
</div>

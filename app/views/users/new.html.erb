<nav class="bg-blue-500 mt-2 rounded">
  <div class="mx-auto px-4 py-2 flex items-center justify-between">
    <%= link_to "Card Table", root_path, class: "text-white font-bold text-lg" %>
    <ul class="flex space-x-4">
      <li><%= link_to "Home",root_path ,  class: "text-black hover:underline" %></li>
      <li><%= link_to "About us", class: "text-white hover:underline" %></li>
      <li><%= link_to "Contact us",  class: "text-white hover:underline" %></li>
      <% if current_user %>
        <li><%= button_to "Logout", logout_path, method: :delete, class: "text-white hover:underline" %></li>
      <% else %>
        <li><%= link_to "Login", login_path, class: "text-white hover:underline" %></li>
      <% end %>
    </ul>
  </div>
</nav>  <br>

<div class="container mx-auto">
  <h2>Register</h2> <br>

  <%= form_with(model: @user, url: register_path, class: "mb-8") do |form| %>
    <div class="mb-4">
      <%= form.label :name %>
      <%= form.text_field :name, class: "block rounded-lg border-gray-300" %>
    </div>

    <div class="mb-4">
      <%= form.label :email %>
      <%= form.email_field :email, class: "block rounded-lg border-gray-300" %>
    </div>

    <div class="mb-4">
      <%= form.label :password %>
      <%= form.password_field :password, class: "block rounded-lg border-gray-300" %>
    </div>

    <%= form.submit "Register", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" ,   data: { turbo_confirm: "Register is successfully." } %>
  <% end %>
</div>

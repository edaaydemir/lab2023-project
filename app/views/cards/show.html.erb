<div class="bg-white shadow-md rounded-lg p-4 mb-4">
  <h2 class="text-lg font-semibold mb-2"><%= @card.title %></h2>
  <p><%= @card.content %></p>
  <p class="text-sm text-gray-500"><%= @card.created_at.strftime("%d/%m/%Y") %></p>
   <br>

  <h3>Comments</h3>
  <% @card.comments.each do |comment| %>
   <div class="comment ">
    <p><strong><%= comment.user_name %>:</strong> <%= comment.content %> </p>
    <div class= "mt-2 mb-1"> <%= link_to "Delete", card_comment_path(@card, comment), class: " bg-stone-300 hover:bg-stone-400 text-slate-500 mt-2 py-2 px-4 rounded align-center", data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this comment?" } %>  </div>
    </div>
  <% end %>
  <br>

  <%= render 'comments/form', card: @card %>

   <br>
  <%= link_to "Back to Home Page", root_path, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
  

  
</div>
